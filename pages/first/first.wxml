<view class='bg'>
  <!--搜索栏-->
  <view class="search">
    <view class="df search_arr">
      <icon class="searchcion" size='20' type='search'></icon>
      <input class="searchinput" disabled placeholder='查找' placeholder-class='search-pla' />
    </view>
  </view>
</view>
<view class="swper">
  <!-- 海报-->
  <swiper indicator-dots='true' autoplay='true' interval='2000'>
    <swiper-item>
      <image src='../../image/test1.jpg' class='swperimage'></image>
    </swiper-item>
    <swiper-item>
      <image src='../../image/test.jpg' class='swperimage'></image>
    </swiper-item>
    <swiper-item>
      <image src='../../image/test2.jpg' class='swperimage'></image>
    </swiper-item>
  </swiper>
</view>
<!--中间按钮-->
<view class="window_view">
  <scroll-view class="scroll-view_H" scroll-x="true">
    <view id="local" class="scroll-view-item_H local">
      <view class='box'>
        <image src='../../image/button1.png' class='boximage'></image>
        <text class='boxtext'>video</text> </view>
    </view>
    <view id="img" class="scroll-view-item_H img">
      <view class='box'>
        <image src='../../image/button4.png'></image>
        <text>FM</text> </view>
    </view>
    <view id="audio" class="scroll-view-item_H audio">
      <view class='box'>
        <image src='../../image/button3.png'></image>
        <text>active</text> </view>
    </view>
    <view id="qrcode" class="scroll-view-item_H qrcode">
      <view class='box'>
        <image src='../../image/button2.png'></image>
        <text>news</text> </view>
    </view>
  </scroll-view>
</view>
<!--视屏区 -->
